<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory app:title="@string/display_header">

    <ListPreference
        android:key="app_theme"
        android:title="@string/app_theme"
        android:defaultValue="0"
        android:entryValues="@array/app_theme_values"
        android:entries="@array/app_theme"
        app:icon="@drawable/ic_action_app_theme"
        />

    <SwitchPreferenceCompat
        app:key="notifications"
        app:title="@string/enable_notifications"
        app:summary="@string/enable_notifications_desc"
        app:defaultValue="true"
        app:icon="@drawable/ic_action_notification"
        />

    <SwitchPreferenceCompat
        app:key="postmarket"
        app:title="@string/use_postmarket"
        app:summary="@string/use_postmarket_desc"
        app:defaultValue="true"
        app:icon="@drawable/ic_action_postmarket"
        />

    <SwitchPreferenceCompat
        app:key="use_chart_overlay_symbol"
        app:title="@string/use_chart_overlay_symbol"
        app:summary="@string/use_chart_overlay_symbol_desc"
        app:defaultValue="false"
        app:icon="@drawable/ic_action_multiline_chart"
        />
    <EditTextPreference
        app:key="chart_overlay_symbol"
        app:title="@string/chart_overlay_symbol_title"
        app:dependency="use_chart_overlay_symbol"
        app:defaultValue="^GSPC"
        app:useSimpleSummaryProvider="true" />

    <Preference
        app:key="update_groups"
        app:title="@string/update_groups_title"
        app:summary="@string/update_groups_desc"
        app:icon="@drawable/ic_action_grouplist"
        />

    <MultiSelectListPreference
        app:key="displayed_views"
        app:title="@string/displayed_views"
        app:summary="@string/displayed_views_summary"
        app:defaultValue="@array/displayed_views_entries_defaults"
        app:dialogTitle="@string/displayed_views"
        app:entries="@array/displayed_views_entries"
        app:entryValues="@array/displayed_views_entries_values"
        app:icon="@drawable/ic_action_display_views"
        />

    <SwitchPreferenceCompat
        app:key="tab_headlines"
        app:title="@string/tab_headlines"
        app:summary="@string/tab_headlines_desc"
        app:defaultValue="true"
        app:icon="@drawable/ic_action_tab_headlines"
        />

  </PreferenceCategory>

  <PreferenceCategory app:title="@string/general_header">

    <Preference
        app:key="export_list"
        app:title="@string/export_list"
        app:summary="@string/export_list_desc"
        app:icon="@drawable/ic_action_export"
        />

    <Preference
        app:key="rename_symbol"
        app:title="@string/rename_symbol_title"
        app:summary="@string/rename_symbol_desc"
        app:icon="@drawable/ic_action_rename_symbol"
        />

    <Preference
        app:key="rename_account"
        app:title="@string/rename_account"
        app:summary="@string/rename_account_desc"
        app:icon="@drawable/ic_action_rename_account"
        />

    <!--
        <Preference
            app:key="export_cloud"
            app:title="@string/export_cloud"
            app:summary="@string/export_cloud_desc"
            app:icon="@drawable/ic_action_export"
            />
    -->

    <Preference
        app:key="reset_portfolios"
        app:title="@string/reset_portfolios_title"
        app:summary="@string/reset_portfolios_desc"
        app:icon="@drawable/ic_action_reset_portfolios"
        />

    <Preference
        app:key="delete_all"
        app:title="@string/delete_all_title"
        app:summary="@string/delete_all_desc"
        app:icon="@drawable/ic_action_delete_all"
        />

  </PreferenceCategory>

  <PreferenceCategory app:title="@string/feedback_header">
    <Preference
        android:title="@string/email_feedback_title"
        android:summary="@string/email_feedback_summary"
        app:icon="@drawable/ic_action_email"
        >
      <intent
          android:action="android.intent.action.VIEW"
          android:data="mailto:jurgen172020@gmail.com">
        <extra
            android:name="android.intent.extra.SUBJECT"
            android:value="StockRoom Feedback"/>
        <!--
                <extra
                    android:name="android.intent.extra.TEXT"
                    android:value="text"/>
        -->
      </intent>
    </Preference>

    <PreferenceScreen
        android:title="Donate"
        android:layout="@layout/donate"
        >
      <intent
          android:action="android.intent.action.VIEW"
          android:data="https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&amp;hosted_button_id=Y2XL22QFYPFXU&amp;source=url"
          />
    </PreferenceScreen>

  </PreferenceCategory>

  <PreferenceCategory app:title="@string/system_header">
    <Preference
        app:key="calc"
        app:title="@string/calc_title"
        app:icon="@drawable/ic_action_calc"
        />

    <Preference
        app:key="version"
        app:title="@string/version" />
  </PreferenceCategory>

</PreferenceScreen>