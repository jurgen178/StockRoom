<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/stockRoomTileItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/summary_item_bg"
    >

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/guideline1"
      app:layout_constraintTop_toTopOf="parent"
      >

    <TextView
        android:id="@+id/stockRoomTileItemGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/group_item_top_bg"
        app:layout_constraintBottom_toTopOf="@id/guidelineMiddle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/stockRoomTileItemGroup_sep"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guidelineMiddle"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/stockRoomTileItemGroup_marker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/group_item_bottom_bg"
        app:layout_constraintTop_toBottomOf="@id/guidelineBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <TextView
      android:id="@+id/stockRoomTileItemSymbol"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="2dp"
      android:layout_marginStart="4dp"
      android:textStyle="bold"
      app:layout_constraintVertical_bias="0.0"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toEndOf="@+id/guideline1"
      app:layout_constraintEnd_toStartOf="@+id/guideline2"
      app:layout_constraintBottom_toTopOf="@+id/guideline3"
      />
  <TextView
      android:id="@+id/stockRoomTileItemMarketPrice"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="2dp"
      android:layout_marginEnd="2dp"
      android:gravity="end"
      app:layout_constraintVertical_bias="0.0"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toEndOf="@+id/guideline2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/guideline3"
      />

  <TextView
      android:id="@+id/stockRoomTileItemMarketChange"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginEnd="2dp"
      android:textSize="12sp"
      android:gravity="end"
      app:layout_constraintTop_toBottomOf="@+id/guideline3"
      app:layout_constraintStart_toEndOf="@+id/guideline1"
      app:layout_constraintEnd_toEndOf="parent"
      />
  <TextView
      android:id="@+id/stockRoomTileItemAssetChange"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="2dp"
      android:layout_marginStart="4dp"
      android:layout_marginBottom="2dp"
      android:gravity="end"
      android:textSize="12sp"
      app:layout_constraintVertical_bias="1.0"
      app:layout_constraintTop_toBottomOf="@+id/stockRoomTileItemMarketChange"
      app:layout_constraintStart_toEndOf="@+id/guideline1"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <TextView
      android:id="@+id/stockRoomTileItemCapital"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginEnd="2dp"
      android:textSize="12sp"
      android:gravity="end"
      app:layout_constraintVertical_bias="1.0"
      app:layout_constraintTop_toBottomOf="@+id/stockRoomTileItemAssetChange"
      app:layout_constraintStart_toEndOf="@+id/guideline1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="12dp"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.55"
      />
  <androidx.constraintlayout.widget.Barrier
      android:id="@+id/guideline3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:barrierDirection="top"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
