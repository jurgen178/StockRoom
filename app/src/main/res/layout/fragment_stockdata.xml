<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      android:fadeScrollbars="false"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          >

        <ImageView
            android:id="@+id/imageViewSymbol"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewSymbol"
            app:layout_constraintBottom_toBottomOf="@id/textViewSymbol"
            app:layout_constraintEnd_toStartOf="@id/textViewSymbol"
            android:contentDescription="Symbol image" />

        <TextView
            android:id="@+id/textViewSymbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/stock_item_text"
            app:layout_constraintStart_toEndOf="@id/imageViewSymbol"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVert"
            />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineVert"
            app:layout_constraintTop_toBottomOf="@+id/textViewSymbol"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/textViewMarketPrice"
            android:layout_width="wrap_content"
            style="@style/stock_item_text"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@id/textViewMarketCurrency"
            app:layout_constraintStart_toEndOf="@+id/guidelineVert"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textViewMarketCurrency"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toTopOf="@id/textViewMarketPrice"
            app:layout_constraintBottom_toBottomOf="@id/textViewMarketPrice"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/textViewChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="13sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/guidelineVert"
            app:layout_constraintTop_toBottomOf="@+id/textViewMarketPrice"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
           android:id="@+id/textViewMarketPriceDelayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="10sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineVert"
            app:layout_constraintTop_toBottomOf="@+id/textViewChange"
            />

        <TextView
            android:id="@+id/textViewPurchasePrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toBottomOf="@id/textViewName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineVert"
            />

        <TextView
            android:id="@+id/textViewAssetChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:gravity="end"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/guidelineVert"
            app:layout_constraintTop_toBottomOf="@+id/textViewMarketPriceDelayed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/guidelineVert"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="start"
            />

      </androidx.constraintlayout.widget.ConstraintLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/textViewRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            >

          <TextView
              android:id="@+id/textViewStockLegend1"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              style="@style/stock_legend"
              />

          <TextView
              android:id="@+id/textViewStockLegend2"
              app:layout_constraintStart_toEndOf="@id/textViewStockLegend1"
              app:layout_constraintTop_toTopOf="parent"
              style="@style/stock_legend"
              />

          <TextView
              android:id="@+id/textViewStockLegend3"
              app:layout_constraintStart_toEndOf="@id/textViewStockLegend2"
              app:layout_constraintTop_toTopOf="parent"
              style="@style/stock_legend"
              />

          <TextView
              android:id="@+id/textViewStockLegend4"
              app:layout_constraintStart_toEndOf="@id/textViewStockLegend3"
              app:layout_constraintTop_toTopOf="parent"
              style="@style/stock_legend"
              />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            >

          <com.thecloudsite.stockroom.CustomCandleStickChart
              android:id="@+id/candleStickChart"
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:visibility="gone"
              />

          <com.thecloudsite.stockroom.CustomLineChart
              android:id="@+id/lineChart"
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:visibility="gone"
              />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            >

          <org.apmem.tools.layouts.FlowLayout
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              >
            <Button
                android:id="@+id/buttonOneDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1D"
                style="@style/stock_item_button"
                />

            <Button
                android:id="@+id/buttonFiveDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5D"
                style="@style/stock_item_button"
                />

            <Button
                android:id="@+id/buttonOneMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1M"
                style="@style/stock_item_button"
                />

            <Button
                android:id="@+id/buttonThreeMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3M"
                style="@style/stock_item_button"
                />

            <Button
                android:id="@+id/buttonYTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YTD"
                style="@style/stock_item_button"
                />

            <Button
                android:id="@+id/buttonOneYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1Y"
                style="@style/stock_item_button"
                />

            <Button
                android:id="@+id/buttonFiveYears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5Y"
                style="@style/stock_item_button"
                />

            <Button
                android:id="@+id/buttonMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max"
                style="@style/stock_item_button"
                />

            <ImageButton
                android:id="@+id/imageButtonIconLine"
                android:src="@drawable/ic_candlegraph"
                android:visibility="gone"
                style="@style/stock_item_imagebutton"
                android:contentDescription="1D"
                />

            <ImageButton
                android:id="@+id/imageButtonIconCandle"
                android:src="@drawable/ic_linegraph"
                android:visibility="gone"
                style="@style/stock_item_imagebutton"
                android:contentDescription="@string/linegraph"
                />
          </org.apmem.tools.layouts.FlowLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/onlineDataView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            tools:listitem="@layout/onlinedataview_item"
            />

        <LinearLayout
            android:id="@+id/portfolioLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <View style="@style/Divider"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/portfolio_header"
              style="@style/section_header"
              />

          <TextView
              android:id="@+id/textViewPortfolio"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_margin="16dp"
              android:textSize="16sp"
              android:textColor="@color/buttonLabel"
              android:background="@drawable/portfolio_item_bg"
              android:gravity="center_horizontal|center_vertical"
              />

          <View style="@style/Divider"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/dataprovider_header"
              style="@style/section_header"
              />

          <Spinner
              android:id="@+id/dataproviderSpinner"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp"
              android:layout_marginBottom="16dp"
              android:entries="@array/dataprovider_items"
              />

        </LinearLayout>

        <View style="@style/Divider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_header"
            style="@style/section_header"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stockgroupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >
          <TextView
              android:id="@+id/textViewGroupColor"
              android:layout_width="20dp"
              android:layout_height="40dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:background="@drawable/group_item_bg"
              />
          <TextView
              android:id="@+id/textViewGroup"
              android:layout_width="0dp"
              android:layout_height="40dp"
              android:gravity="center_horizontal|center_vertical"
              android:textSize="16sp"
              android:textColor="@color/material_on_background_emphasis_high_type"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/textViewGroupColor"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:background="@drawable/stock_item_bg"
              />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View style="@style/Divider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/marker_header"
            style="@style/section_header"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/markerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >
          <TextView
              android:id="@+id/textViewMarkerColor"
              android:layout_width="20dp"
              android:layout_height="40dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toStartOf="@id/textViewMarkerText"
              android:background="@drawable/group_item_bg"
              />
          <TextView
              android:id="@+id/textViewMarkerText"
              android:layout_width="0dp"
              android:layout_height="40dp"
              android:gravity="center_horizontal|center_vertical"
              android:textSize="16sp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/textViewMarkerColor"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:background="@drawable/stock_item_bg"
              />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View style="@style/Divider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_assets"
            style="@style/section_header"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            >

            <org.apmem.tools.layouts.FlowLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                >

          <ImageButton
              android:id="@+id/splitAssetsButton"
              android:src="@drawable/ic_action_split"
              style="@style/asset_item_imagebutton"
              android:contentDescription="@string/split_asset"
              />

          <ImageButton
              android:id="@+id/moveAssetsButton"
              android:src="@drawable/ic_action_move_asset"
              style="@style/asset_item_imagebutton"
              android:contentDescription="@string/move_asset"
              />

          <ImageButton
              android:id="@+id/addAssetsButton"
              android:src="@drawable/ic_action_add_circle_outline"
              style="@style/asset_item_imagebutton"
              android:contentDescription="@string/add_asset"
              />

          <ImageButton
              android:id="@+id/removeAssetButton"
              android:src="@drawable/ic_action_remove_circle_outline"
              style="@style/asset_item_imagebutton"
              android:contentDescription="@string/remove_asset"
              />

            </org.apmem.tools.layouts.FlowLayout>

        </LinearLayout>

        <HorizontalScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fadeScrollbars="false"
            >
          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/assetsView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:listitem="@layout/assetview_item"
              />
        </HorizontalScrollView>

        <View style="@style/Divider"
            android:id="@+id/price_preview_divider"
            />

        <TextView
            android:id="@+id/price_preview_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_preview_header"
            style="@style/section_header"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/price_preview_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >

          <com.thecloudsite.stockroom.utils.PickerKnob
              android:id="@+id/picker_knob"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:picker_text_size="10sp"
              app:picker_view_height="24dp"
              app:picker_dash_gap="12dp"
              app:picker_text_color="@color/black"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              />

          <TextView
              android:id="@+id/new_stock_price"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_margin="16dp"
              style="@style/stock_item_text"
              app:layout_constraintTop_toBottomOf="@id/picker_knob"
              app:layout_constraintStart_toEndOf="@id/guidelineKnob"
              app:layout_constraintEnd_toEndOf="parent"
              />

          <TextView
              android:id="@+id/new_total_asset"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp"
              app:layout_constraintTop_toBottomOf="@id/new_stock_price"
              app:layout_constraintStart_toEndOf="@id/guidelineKnob"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              />

          <com.thecloudsite.stockroom.utils.RotaryControl
              android:id="@+id/rotaryControl"
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_marginTop="16dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/guidelineKnob"
              app:layout_constraintTop_toBottomOf="@id/picker_knob"
              app:layout_constraintBottom_toBottomOf="parent"
              />

          <androidx.constraintlayout.widget.Guideline
              android:id="@+id/guidelineKnob"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              app:layout_constraintGuide_percent="0.4"
              />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View style="@style/Divider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alerts"
            style="@style/section_header"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/alertLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            >

          <TextView
              android:id="@+id/textviewAlertAbove"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="@+id/alertAboveInputLayout"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@+id/guideline1"
              app:layout_constraintBottom_toBottomOf="@+id/alertAboveInputLayout"
              android:text="@string/alert_above"
              />

          <TextView
              android:text="▲"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:contentDescription="@string/alert_above"
              app:layout_constraintTop_toTopOf="@+id/alertAboveInputLayout"
              app:layout_constraintStart_toEndOf="@+id/guideline1"
              app:layout_constraintEnd_toStartOf="@id/guideline2"
              app:layout_constraintBottom_toBottomOf="@+id/alertAboveInputLayout"
              />

          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/alertAboveInputLayout"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@id/guideline2"
              app:layout_constraintEnd_toEndOf="parent"
              app:endIconMode="clear_text"
              >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/alertAboveInputEditText"
                android:background="@color/textInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:inputType="numberDecimal"
                android:digits="0123456789.,"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textAlignment="textEnd"
                />
          </com.google.android.material.textfield.TextInputLayout>

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@string/alert_note"
              app:layout_constraintTop_toTopOf="@+id/alertAboveNoteInputLayout"
              app:layout_constraintEnd_toStartOf="@+id/guideline1"
              app:layout_constraintBottom_toBottomOf="@+id/alertAboveNoteInputLayout"
              />

          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/alertAboveNoteInputLayout"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@+id/alertAboveInputLayout"
              app:layout_constraintStart_toEndOf="@id/guideline2"
              app:layout_constraintEnd_toEndOf="parent"
              app:endIconMode="clear_text"
              >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/alertAboveNoteInputEditText"
                android:background="@color/textInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                />
          </com.google.android.material.textfield.TextInputLayout>

          <TextView
              android:id="@+id/textviewBelowAbove"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="@+id/alertBelowInputLayout"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@+id/guideline1"
              app:layout_constraintBottom_toBottomOf="@+id/alertBelowInputLayout"
              android:text="@string/alert_below"
              />

          <TextView
              android:text="▼"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:contentDescription="@string/alert_below"
              app:layout_constraintTop_toTopOf="@+id/alertBelowInputLayout"
              app:layout_constraintStart_toEndOf="@+id/guideline1"
              app:layout_constraintEnd_toStartOf="@id/guideline2"
              app:layout_constraintBottom_toBottomOf="@+id/alertBelowInputLayout"
              />

          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/alertBelowInputLayout"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/alertAboveNoteInputLayout"
              app:layout_constraintStart_toEndOf="@id/guideline2"
              app:layout_constraintEnd_toEndOf="parent"
              app:endIconMode="clear_text"
              >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/alertBelowInputEditText"
                android:background="@color/textInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:inputType="numberDecimal"
                android:digits="0123456789.,"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textAlignment="textEnd"
                />
          </com.google.android.material.textfield.TextInputLayout>

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@string/alert_note"
              app:layout_constraintTop_toTopOf="@+id/alertBelowNoteInputLayout"
              app:layout_constraintEnd_toStartOf="@+id/guideline1"
              app:layout_constraintBottom_toBottomOf="@+id/alertBelowNoteInputLayout"
              />

          <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/alertBelowNoteInputLayout"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
